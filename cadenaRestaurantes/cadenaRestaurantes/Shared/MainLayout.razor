@inherits LayoutComponentBase

@using cadenaRestaurantes.AccessControllers;
@using Microsoft.AspNetCore.Components.Authorization;
@inject AuthenticationStateProvider autenticacionProvider
@inject NavigationManager navManager

<PageTitle>cadenaRestaurantes</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            <a @onclick="CerrarSesion" href="javascript:void(0)">Salir</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {

    private async Task CerrarSesion()
    {
        var autenticacionExt = (AuthenticationFilter)autenticacionProvider;
        await autenticacionExt.UpdateAuthenticationState(null);
        navManager.NavigateTo("/", true);
    }
}
